---
const base = import.meta.env.BASE_URL;
---

<section class="pt-24 pb-16 md:pt-32 md:pb-24 bg-gradient-to-b from-white to-slate-50">
  <!-- Hero Content with Background Image -->
  <div class="relative overflow-hidden">
    <!-- Background Image - Distressed Property -->
    <div
      class="absolute inset-0 bg-cover bg-center opacity-[0.25] grayscale"
      style="background-image: url('https://images.unsplash.com/photo-1518780664697-55e3ad937233?w=1920&q=80');"
    ></div>
    <div class="absolute inset-0 bg-gradient-to-b from-white/60 via-white/40 to-white/80"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto pb-8">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-accent-50 text-accent-700 rounded-full text-sm font-medium mb-8">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          AI-Powered Deal Analysis
        </div>

        <!-- Headline -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-slate-900 leading-tight">
          Analyze Fix-and-Flip Deals in
          <span class="text-accent">Minutes</span>, Not Hours
        </h1>

        <!-- Subheadline -->
        <p class="mt-6 text-lg md:text-xl text-slate-600 max-w-2xl mx-auto">
          AI-powered property analysis, rehab cost estimates, and financial modeling for smarter real estate investments. Stop guessing, start knowing.
        </p>

        <!-- CTA Buttons -->
        <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href="https://app.getflipai.com/register" target="_blank" rel="noopener noreferrer" class="btn-primary text-lg px-8 py-4">
            Start Free Trial
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a href="#how-it-works" class="btn-secondary text-lg px-8 py-4">
            See How It Works
          </a>
        </div>

        <!-- Social Proof -->
        <div class="mt-12 flex items-center justify-center gap-8 text-sm text-slate-500">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>No credit card required</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Free to start</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- App Screenshots -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mt-16 max-w-6xl mx-auto">
      <div class="relative">
        <!-- Supporting screenshots (behind) -->
        <div class="hidden md:flex justify-center gap-6 mb-[-60px] relative z-0">
          <div class="w-80 rounded-lg overflow-hidden shadow-xl border border-slate-200 transform -rotate-3 -translate-y-4">
            <img src={`${base}screenshots/property-info.png`} alt="Property Info" class="w-full" />
          </div>
          <div class="w-80 rounded-lg overflow-hidden shadow-xl border border-slate-200 transform -translate-y-8">
            <img src={`${base}screenshots/comparables.png`} alt="Comparable Sales" class="w-full" />
          </div>
          <div class="w-80 rounded-lg overflow-hidden shadow-xl border border-slate-200 transform rotate-3 -translate-y-4">
            <img src={`${base}screenshots/photo-analysis.png`} alt="Photo Analysis" class="w-full" />
          </div>
        </div>

        <!-- Main screenshot (front) -->
        <div class="relative z-10 rounded-xl overflow-hidden shadow-2xl border border-slate-200 bg-white">
          <img src={`${base}screenshots/investment-analysis.png`} alt="Investment Analysis Dashboard" class="w-full" />
        </div>
      </div>
    </div>
  </div>
</section>
