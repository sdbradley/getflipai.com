<section id="features" class="py-16 md:py-24 bg-slate-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <img src="https://s3.us-east-1.amazonaws.com/getflipai.com/flipai-logo-blue-flat-white-bg.png" alt="FlipAI" class="w-16 h-16 rounded-xl mx-auto mb-6 shadow-lg" />
      <h2 class="section-heading">Everything You Need to Analyze Deals</h2>
      <p class="section-subheading">
        Powerful tools that work together to give you the complete picture on every property.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="p-6 rounded-xl bg-white border border-slate-200 hover:border-accent-200 hover:shadow-lg transition-all group">
          <div class="w-12 h-12 rounded-lg bg-accent-100 text-accent-600 flex items-center justify-center mb-4 group-hover:bg-accent-200 transition-colors" set:html={feature.icon} />
          <h3 class="text-xl font-semibold text-slate-900 mb-2">{feature.title}</h3>
          <p class="text-slate-600 mb-4">{feature.description}</p>
          <span class="inline-flex items-center text-sm font-medium text-accent-600">
            {feature.highlight}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
